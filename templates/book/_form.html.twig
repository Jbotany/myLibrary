{{ form_start(form) }}

<div class="col-12 formBook">
    <p class="mb-0">
        {{ form_label(form.ISBN, 'ISBN') }}
    </p>
    <div class="alert alert-danger">{{ form_errors(form.ISBN) }}</div>
    {{ form_widget(form.ISBN, {'attr':{'class':'w-100'}}) }}
</div>

<div class="col-12 formBook">
    <p class="mb-0">
        {{ form_label(form.title, 'Titre') }}
    </p>
    <div class="alert alert-danger">{{ form_errors(form.title) }}</div>
    {{ form_widget(form.title, {'attr':{'class':'w-100'}}) }}
</div>

